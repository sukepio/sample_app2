<h1>投稿詳細</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @list.title %></td>
      <td><%= attachment_image_tag @list, :image, :fill, 100, 100, format: 'jpeg' %></td>
      <td><%= @list.body %></td>
      <td><%= link_to '編集', edit_todolist_path(@list) %></td>
      <td><%= link_to '削除', destroy_todolist_path(@list), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
      <td><%= link_to '戻る', todolists_path %></td>
    </tr>
  </tbody>
</table>