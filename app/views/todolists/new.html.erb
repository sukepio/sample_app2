<div class="new-post">
  <h1>新規投稿</h1>
  <%= form_with model:@list, url:'/todolists', local:true do |f| %>
    <h4>タイトル</h4>
    <%= f.text_field :title %>
    <h4>本文</h4>
    <%= f.text_area :body %>
    <h4>画像</h4>
    <span class="image-form"><%= f.attachment_field :image %></span>
    <span class="submit"><%= f.submit '投稿' %></span>
  <% end %>
</div>
